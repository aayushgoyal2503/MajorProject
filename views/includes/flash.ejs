<!-- @format -->
<!-- success ek array hai agr uski koi value bhi nhi present hoti tb bhi vo ek empty array to rhega hi -->
<% if (success && success.length){ %>
<div
  class="alert alert-success alert-dismissible fade show mt-2"
  role="alert"
  style="border: 2px; width: 50%; margin: auto">
  <%=success%>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"></button>
</div>

<% }%> <% if (error && error.length){ %>
<div
  class="alert alert-danger alert-dismissible fade show mt-2"
  role="alert"
  style="border: 2px; width: 50%; margin: auto">
  <%=error%>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"></button>
</div>

<% }%>
