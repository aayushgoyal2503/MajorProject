<!-- @format -->

<% layout("/layouts/boilerplate")%>
<body>
  <div class="form-big-container">
    <div class="heading">
      <h3><br />Login on WanderLust</h3>
    </div>
    <div class="form_class row">
      <div class="col-5">
        <form method="post" action="/login" novalidate class="needs-validation">
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>

            <!-- invalid-feedback tb kaam krega jb empty field chor denge and valid-feedback tb kaam krega jb empty field nhi chorenge -->
            <!-- valid,invalid ka type (string,number,negative,positive se koi mtlb nhi hai) -->

            <input
              name="username"
              placeholder="enter your Username"
              type="text"
              id="username"
              class="form-control"
              required />
            <div class="invalid-feedback">Please Enter valid Username</div>
          </div>

          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              name="password"
              placeholder="enter your password"
              type="password"
              id="password"
              class="form-control"
              required />
            <div class="invalid-feedback">Please Enter valid Password</div>
          </div>

          <center><button class="btn btn-success">LogIn</button></center>
        </form>
      </div>
    </div>
  </div>
</body>
